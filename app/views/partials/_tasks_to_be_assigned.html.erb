<li class='task-box'>
  <span class='client-request'>
    <strong><%= task.client.name %> <%= task.client.last_name %></strong> has requested <strong><%= task.task_type %></strong> 
  </span>
  <section class='central-section'>
    <em><%= task.description %></em>
    <%= link_to "Assign a volunteer", task_path(task), class: 'match-btn' %>
  </section>
  <%= render 'partials/status_bar', task: task %>

</li>   