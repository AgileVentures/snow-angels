<%= form_tag(clients_path, :method => 'get', id: 'search-form') do %>
  <%= text_field_tag :search, params[:search], placeholder: 'Search clients' %>
  <%= submit_tag 'Search', :name => nil %>
<% end %>

<% if @clients.any? %>

  <% @clients.each do |client| %>
    <%= client.name %>
    <%= client.last_name %>
    <%= client.address %>
    <%= client.postcode %>
    <%= client.phone %>
  <% end %>

<% end %>