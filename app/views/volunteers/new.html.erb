    <p><%= f.label :address %>
    <%= f.text_field :address %></p>
    <p><%= f.label :post_code %>
    <%= f.text_field :post_code %></p>
    <p><%= f.label :mobile_number %>
    <%= f.text_field :mobile_number %></p>
