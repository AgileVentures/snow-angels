<h1> Welcome to Snow Angels </h1>

  <%= form_tag(volunteers_path, :method => 'get', id: 'search-form') do %>
    <%= text_field_tag :search, params[:search], placeholder: 'Search volunteers' %>
    <%= submit_tag 'Search', :name => nil %>
  <% end %>

  <% if @volunteer.any? %>

    <% @volunteer.each do |volunteer| %>
      <ul>
        <li>
          <%= volunteer.name %>
          <%= volunteer.last_name %>
          DBS Checked: <%= volunteer.dbs %>
          <%= volunteer.address %>
          <%= volunteer.post_code %>
          <%= volunteer.mobile_number %>
          <%= volunteer.email %>
          Shopping:<%= volunteer.shopping %> |
          Prescription Collection: <%= volunteer.prescription_collection %> |
          Snow Clearance: <%= volunteer.snow_clearance %> |
          Grit Spreading: <%= volunteer.grit_spreading %> |
          Dog Walking: <%= volunteer.dog_walking %> |
          <%= link_to 'Edit', edit_volunteer_path(volunteer) %>
          <%= link_to 'Delete', volunteer_path(volunteer), method: :delete %>
        </li>
      </ul>
    <% end %>
  <% end %>
