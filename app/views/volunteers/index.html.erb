<h1> Welcome to Snow Angels <h1>

  <%= form_tag(volunteers_path, :method => 'get', id: 'search-form') do %>
    <%= text_field_tag :search, params[:search], placeholder: 'Search volunteers' %>
    <%= submit_tag 'Search', :name => nil %>
  <% end %>

  <% if @volunteer.any? %>

    <% @volunteer.each do |volunteer| %>
      <%= volunteer.name %>
      <%= volunteer.last_name %>
      <%= volunteer.address %>
      <%= volunteer.post_code %>
      <%= volunteer.mobile_number %>
      <%= volunteer.shopping %>
      <%= volunteer.prescription_collection %>
      <%= volunteer.snow_clearance %>
      <%= volunteer.grit_spreading %>
      <%= volunteer.dog_walking %>
      <%= link_to 'Edit', edit_volunteer_path(volunteer) %>
      <%= link_to 'Delete', volunteer_path(volunteer), method: :delete %>
    <% end %>

  <% end %>
