<% if admin_signed_in? %>
  
  <section class="sms_all_volunteers">
    <%= form_tag snow_path do %>
      <%= text_field_tag :custom_body, params[:custom_body], placeholder: 'SMS to all volunteers' %>
      <%= submit_tag "Send text" %>
    <% end %>
  </section>

  <h2 class='center'>TASKS TO BE ASSIGNED</h2>
  <ul>
    <% @tasks_to_be_assigned.each do |task| %>
      <%= render 'partials/tasks_to_be_assigned', task: task %>
    <% end %>
  </ul>

  <h2 class='center'>ASSIGNED TASKS</h2>
  <ul>
    <% @assigned_tasks.each do |task| %>
      <%= render 'partials/assigned_tasks', task: task %>
    <% end %>
  </ul>

  <h2 class='center'>COMPLETED TASKS</h2>
  <ul>
    <% @completed_tasks.each do |task| %>
      <%= render 'partials/completed_tasks', task: task %>
    <% end %>
  </ul>

<% else %>
  <%= render 'partials/splash' %>
<% end %>
