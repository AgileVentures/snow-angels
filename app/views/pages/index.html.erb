<% if admin_signed_in? %>

  <%= link_to "SMS to all Volunteers", snow_path, class: 'snow_day_button' %>

  <section class='left-container'>
    <h4> Tasks </h4>
    <ul>
      <% if @tasks %>
        <% @tasks.each do |task| %>
          <% unless task.task_done %>
            <li class='client-box'>
              <%= task.client.name %> | <%= task.client.last_name %> | <%= task.task_type %> | <%= task.description %>| <%= task.client.phone %> | <%= task.client.address %> | <%= task.client.postcode %> <%= link_to "Match", match_path(task) %>


            <%= form_for task do |f| %>
              <%= f.label :called_client %>
              <%= f.check_box :called_client %>
              <%= f.label :task_done %>
              <%= f.check_box :task_done %>
              <%= f.submit "Update"%>
            <% end %>
            </li>

          <% else %>
            <li class='client-box-complete'>
              <%= task.client.name %> | <%= task.client.last_name %> | <%= task.task_type %> | <%= task.description %>
            </li>
          <% end %>
        <% end %>
      <% end %>
    </ul>
  </section>


<% else %>
  <%= render 'partials/splash' %>
<% end %>
